{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "tag_groups"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "tag_groups": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["access"],
            "properties": {
              "access": {
                "type": "string",
                "enum": ["read", "write", "read/write"]
              },
              "description": {
                "type": "string"
              },
              "mapped": {
                "type": "boolean"
              },
              "plc_tag": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["bool", "float", "integer", "string", "dict"]
              },
              "range": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {
                  "type": "number"
                }
              },
              "scaling": {
                "type": "string"
              },
              "unit": {
                "type": "string"
              },
              "min_value": {
                "type": "number"
              },
              "max_value": {
                "type": "number"
              },
              "speeds": {
                "type": "object",
                "additionalProperties": {
                  "type": "number"
                }
              },
              "default": {
                "type": ["number", "string", "boolean"]
              },
              "states": {
                "type": "object",
                "additionalProperties": {
                  "type": ["boolean", "string", "number"]
                }
              },
              "internal": {
                "type": "boolean"
              },
              "components": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "parameters": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "conditions": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "required": [
        "gas_control",
        "feeders",
        "deagglomerators",
        "vacuum",
        "nozzle",
        "motion",
        "interlocks",
        "safety",
        "status",
        "pressure"
      ]
    }
  }
} 