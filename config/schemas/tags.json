{
    "type": "object",
    "title": "Tags Configuration",
    "required": ["plc", "feeder"],
    "properties": {
        "plc": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": ["address", "data_type"],
                "properties": {
                    "address": {
                        "type": "string",
                        "pattern": "^[A-Z]\\d+(\\.\\d+)?$"
                    },
                    "data_type": {
                        "type": "string",
                        "enum": ["BOOL", "INT", "REAL", "STRING"]
                    },
                    "description": {
                        "type": "string"
                    },
                    "read_only": {
                        "type": "boolean",
                        "default": false
                    },
                    "scaling": {
                        "type": "object",
                        "required": ["factor", "offset"],
                        "properties": {
                            "factor": {
                                "type": "number"
                            },
                            "offset": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        },
        "feeder": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": ["address", "data_type"],
                "properties": {
                    "address": {
                        "type": "string",
                        "pattern": "^[A-Z]\\d+(\\.\\d+)?$"
                    },
                    "data_type": {
                        "type": "string",
                        "enum": ["BOOL", "INT", "REAL", "STRING"]
                    },
                    "description": {
                        "type": "string"
                    },
                    "read_only": {
                        "type": "boolean",
                        "default": false
                    },
                    "scaling": {
                        "type": "object",
                        "required": ["factor", "offset"],
                        "properties": {
                            "factor": {
                                "type": "number"
                            },
                            "offset": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        },
        "system_state": {
            "type": "object",
            "properties": {
                "state": {
                    "type": "object",
                    "required": ["access", "description", "internal", "mapped", "options"],
                    "properties": {
                        "access": {
                            "type": "string",
                            "enum": ["read", "read/write"]
                        },
                        "description": {
                            "type": "string"
                        },
                        "internal": {
                            "type": "boolean"
                        },
                        "mapped": {
                            "type": "boolean"
                        },
                        "options": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "INITIALIZING",
                                    "IDLE", 
                                    "READY",
                                    "RUNNING",
                                    "ERROR",
                                    "SHUTDOWN"
                                ]
                            }
                        },
                        "type": {
                            "type": "string",
                            "enum": ["string"]
                        }
                    }
                }
            }
        }
    }
} 