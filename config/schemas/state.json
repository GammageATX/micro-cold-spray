{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "initial_state", "states"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "initial_state": {
      "type": "string"
    },
    "states": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["description", "transitions"],
        "properties": {
          "description": {
            "type": "string"
          },
          "conditions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "transitions": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": ["description"],
              "properties": {
                "description": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "required": [
        "ERROR",
        "INITIALIZING",
        "IDLE",
        "READY",
        "RUNNING",
        "SHUTDOWN"
      ]
    }
  }
} 