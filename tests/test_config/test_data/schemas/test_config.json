{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Application Configuration Schema",
    "description": "Schema for validating application configuration files",
    "required": ["application", "version"],
    "properties": {
        "application": {
            "type": "object",
            "required": ["development", "environment", "info", "paths", "services"],
            "properties": {
                "development": {
                    "type": "object",
                    "required": ["mock_hardware", "profiling", "testing"],
                    "properties": {
                        "mock_hardware": {
                            "type": "boolean",
                            "description": "Enable hardware mocking"
                        },
                        "profiling": {
                            "type": "boolean",
                            "description": "Enable performance profiling"
                        },
                        "testing": {
                            "type": "object",
                            "required": ["coverage", "enabled"],
                            "properties": {
                                "coverage": {
                                    "type": "boolean",
                                    "description": "Enable test coverage"
                                },
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Enable testing mode"
                                }
                            }
                        }
                    }
                },
                "environment": {
                    "type": "object",
                    "required": ["async_mode", "debug", "log_level", "mode"],
                    "properties": {
                        "async_mode": {
                            "type": "boolean",
                            "description": "Enable async mode"
                        },
                        "debug": {
                            "type": "boolean",
                            "description": "Enable debug mode"
                        },
                        "log_level": {
                            "type": "string",
                            "enum": ["DEBUG", "INFO", "WARNING", "ERROR"],
                            "description": "Logging level"
                        },
                        "mode": {
                            "type": "string",
                            "enum": ["development", "production"],
                            "description": "Environment mode"
                        },
                        "test_value": {
                            "type": "string",
                            "description": "Test value for configuration"
                        },
                        "user": {
                            "type": "string",
                            "description": "Current user"
                        },
                        "user_history": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "info": {
                    "type": "object",
                    "required": ["description", "name", "version"],
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Application description"
                        },
                        "name": {
                            "type": "string",
                            "description": "Application name"
                        },
                        "version": {
                            "type": "string",
                            "pattern": "^\\d+\\.\\d+\\.\\d+$",
                            "description": "Application version"
                        }
                    }
                },
                "paths": {
                    "type": "object",
                    "required": ["config", "data"],
                    "properties": {
                        "config": {
                            "type": "string",
                            "description": "Configuration directory path"
                        },
                        "data": {
                            "type": "object",
                            "required": ["parameters", "nozzles"],
                            "properties": {
                                "parameters": {
                                    "type": "string",
                                    "description": "Parameters directory path"
                                },
                                "nozzles": {
                                    "type": "string",
                                    "description": "Nozzles directory path"
                                },
                                "patterns": {
                                    "type": "object",
                                    "properties": {
                                        "root": { "type": "string" },
                                        "custom": { "type": "string" },
                                        "serpentine": { "type": "string" },
                                        "spiral": { "type": "string" }
                                    }
                                },
                                "sequences": { "type": "string" },
                                "powders": { "type": "string" },
                                "runs": { "type": "string" }
                            }
                        }
                    }
                },
                "services": {
                    "type": "object",
                    "required": ["config_manager", "data_manager", "message_broker", "state_manager", "tag_manager", "ui_manager"],
                    "properties": {
                        "config_manager": {
                            "type": "object",
                            "required": ["backup_enabled", "backup_interval", "validation_enabled"],
                            "properties": {
                                "backup_enabled": {
                                    "type": "boolean",
                                    "description": "Enable configuration backups"
                                },
                                "backup_interval": {
                                    "type": "number",
                                    "minimum": 0,
                                    "description": "Backup interval in seconds"
                                },
                                "validation_enabled": {
                                    "type": "boolean",
                                    "description": "Enable configuration validation"
                                }
                            }
                        },
                        "data_manager": {
                            "type": "object",
                            "required": ["cache_enabled", "cache_timeout", "formats", "validation_enabled"],
                            "properties": {
                                "cache_enabled": {
                                    "type": "boolean"
                                },
                                "cache_timeout": {
                                    "type": "number"
                                },
                                "formats": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "validation_enabled": {
                                    "type": "boolean"
                                }
                            }
                        },
                        "message_broker": {
                            "type": "object",
                            "required": ["topics"],
                            "properties": {
                                "topics": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "state_manager": {
                            "type": "object",
                            "required": ["history_enabled", "history_length", "transition_timeout"],
                            "properties": {
                                "history_enabled": {
                                    "type": "boolean"
                                },
                                "history_length": {
                                    "type": "number"
                                },
                                "transition_timeout": {
                                    "type": "number"
                                }
                            }
                        },
                        "tag_manager": {
                            "type": "object",
                            "required": ["cache_enabled", "cache_timeout", "poll_rate"],
                            "properties": {
                                "cache_enabled": {
                                    "type": "boolean"
                                },
                                "cache_timeout": {
                                    "type": "number"
                                },
                                "poll_rate": {
                                    "type": "number"
                                }
                            }
                        },
                        "ui_manager": {
                            "type": "object",
                            "required": ["error_display_timeout", "update_rate"],
                            "properties": {
                                "error_display_timeout": {
                                    "type": "number"
                                },
                                "update_rate": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Configuration version"
        }
    }
} 